generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Comment {
  slug      String   @id @default(cuid())
  content   String
  author    User     @relation("UserComments", fields: [authorId], references: [slug])
  authorId  String
  post      Post     @relation("PostComments", fields: [postId], references: [slug], onDelete: Cascade)
  postId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  slug                String    @id @default(cuid())
  name                String?
  email               String    @unique
  emailVerified       DateTime?
  image               String?
  password            String?
  role                String    @default("USER")
  posts               Post[]    @relation("UserPosts")
  comments            Comment[] @relation("UserComments")
  savedPosts          Post[]    @relation("SavedPosts")
  readPosts           Post[]    @relation("ReadPosts")
  preferredCategories Category[] @relation("UserPreferredCategories")
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
}

model Post {
  slug        String    @id @default(cuid())
  title       String
  content     String
  published   Boolean   @default(false)
  author      User      @relation("UserPosts", fields: [authorId], references: [slug])
  authorId    String
  comments    Comment[] @relation("PostComments")
  category    Category? @relation(fields: [categoryId], references: [slug])
  categoryId  String?
  tags        Tag[]     @relation("PostTags")
  savedBy     User[]    @relation("SavedPosts")
  readBy      User[]    @relation("ReadPosts")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  publishedAt DateTime?
}

model Category {
  slug        String @id @default(cuid())
  name        String @unique
  posts       Post[]
  preferredBy User[] @relation("UserPreferredCategories")
}

model Tag {
  slug  String @id @default(cuid())
  name  String @unique
  posts Post[] @relation("PostTags")
}